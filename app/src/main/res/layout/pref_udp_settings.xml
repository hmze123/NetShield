<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent"
     android:paddingEnd="15dp"
     android:orientation="vertical"
     android:paddingBottom="10dp"
     android:paddingStart="15dp"
     android:paddingTop="10dp">

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="horizontal">

        <TextView
             android:layout_height="wrap_content"
             android:layout_width="wrap_content"
             android:textSize="20sp"
             android:layout_weight="1"
             android:text="UDP Tweak Settings"
             android:textStyle="bold" />

        <Button
             android:layout_height="30dp"
             android:layout_width="30dp"
             android:background="@drawable/ic_close"
             android:textSize="17sp"
             android:id="@+id/btnCanceludp"
             android:layout_gravity="right" />

    </LinearLayout>

    <View
         android:layout_height="1dp"
         android:layout_width="match_parent"
         android:background="?android:dividerVertical" />

    <LinearLayout
         android:layout_height="wrap_content"
         android:layout_width="match_parent"
         android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:hint="UDP Buffer"
             android:textSize="14sp"
             style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
             android:layout_marginTop="5dp"
             android:ems="50"
             android:inputType="textMultiLine|textWebEmailAddress">

            <EditText
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:singleLine="true"
                 android:maxLines="1"
                 android:id="@+id/buffer" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:hint="UP SPEED"
             android:textSize="14sp"
             style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
             android:ems="50"
             android:inputType="textMultiLine|textWebEmailAddress">

            <EditText
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:id="@+id/upspeed" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
             android:layout_height="wrap_content"
             android:layout_width="match_parent"
             android:hint="DOWN SPEED"
             android:textSize="14sp"
             style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
             android:ems="50"
             android:inputType="textMultiLine|textWebEmailAddress">

            <EditText
                 android:layout_height="wrap_content"
                 android:layout_width="match_parent"
                 android:id="@+id/downspeed" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <Button
         android:layout_height="60dp"
         android:layout_width="match_parent"
         android:id="@+id/btnSaveudp"
         android:text="Apply" />

</LinearLayout>